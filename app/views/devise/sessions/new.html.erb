<div class="landding-page">
  <div class="layer">
    <!-- Navigation -->
        <nav class="navbar navbar-toggleable-sm navbar-trans navbar-inverse">
        <div class="container-fluid">
          <a href="/" title="hudsonlab" class="float-left navbar-brand font-weight-light"><h7 class="light text-secondary">Hudson Lab</ht></a>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarToggler-1" aria-controls="navbarToggler-1" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>


          <div class=" pull-xs-right justify-content-end" >
            <ul class=" list-inline mt-2 mt-md-0">
              <li class="list-inline-item mt-2 font-weight-light">
                <a class="text-secondary pt-2" href="/users/sign_in"><i class="ion-ios-person-outline"></i> Login <span class="sr-only">(current)</span></a>
              </li>
              <li class="list-inline-item mt-2 font-weight-light ">
                <a class="font-weight-light text-secondary" href="/users/sign_up"><i class="ion-ios-person-outline"></i> Register</a>
              </li>
              <li class="list-inline-item mt-2 font-weight-light text-secondary">
                <a class=" text-secondary" href="/about"><i class="ion-ios-settings "></i> Docs</a>
              </li>
              <li class="list-inline-item mt-2 font-weight-light text-secondary">
                <a class=" text-secondary" href="/users/confirmation/new"><i class="ion-ios-person-outline"></i> Password?</a>
              </li>

            </ul>
          </div>
        </div>
      </nav>
      <div class="creds-sec login-sec">


    <!-- Page Content -->
    <section filter-color="orange ">
      <center>
        <div class="top-header">
     <div class="authform rounded-0">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="text-center cred-i">
          <i class="ion-person"></i>
        </div>

        <%= devise_error_messages! %>
        <div class="form-group">
          <%- if devise_mapping.registerable? %>
            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
          <% end -%>
          <%= f.label :email,class: 'lable-creds' %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control rounded-0' %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.label :password,class: 'lable-creds' %>
          <%= f.password_field :password, class: 'form-control rounded-0' %>
        </div>
          <%= f.submit 'Sign in', :class => ' right cred-btn rounded-0' %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox rounded-0" style="width:150px">
              <label>
                <%= f.check_box :remember_me, class: 'rounded-0' %> Remember me
              </label>
            </div>
          <% end -%>
      <% end %>
    </div>
        </div>
      </center>
    </section>
    </div>
  </div>
</div>
